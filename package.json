{
  "name": "solid-boilerplate",
  "version": "0.0.0",
  "description": "A lightweight and modern starter template for building web applications using Solid and Vite with fast builds, hot module replacement, and production-ready configurations",
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexferl/solid-boilerplate.git"
  },
  "author": "alexferl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexferl/solid-boilerplate/issues"
  },
  "homepage": "https://github.com/alexferl/solid-boilerplate#readme",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "coverage:ui": "vitest run --coverage && open coverage/index.html",
    "lint": "biome check --write"
  },
  "dependencies": {
    "@solidjs/router": "0.15.4",
    "solid-js": "1.9.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@solidjs/testing-library": "0.8.10",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "jsdom": "28.0.0",
    "vite": "7.3.1",
    "vite-plugin-solid": "2.11.10",
    "vitest": "4.0.18"
  }
}
